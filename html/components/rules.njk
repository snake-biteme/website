<rules>
    <div id="rules" class="carousel slide" data-ride="carousel" style="width: 60vw">
        <ol class="carousel-indicators">
            <li data-target="#rules" data-slide-to="0" class="active"></li>
            <li data-target="#rules" data-slide-to="1"></li>
            <li data-target="#rules" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="../images/rules/gather-png.png" alt="gather-along" width="300px" height="300px">
                <div class="carousel-caption d-md-block">
                    <h5>Gather everyone around the screen</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../images/rules/qr-png.png" alt="scan-qr"  height="300px">
                <div class="carousel-caption d-md-block">
                    <h5>Use the phone to scan the QR code</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../images/rules/controller-png.png" alt="phone-controller" height="300px">
                <div class="carousel-caption d-md-block">
                    <h5>Press start and control your snake using your phone</h5>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</rules>